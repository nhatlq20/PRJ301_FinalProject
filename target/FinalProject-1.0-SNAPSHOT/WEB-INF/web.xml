<?xml version="1.0" encoding="UTF-8"?>
<web-app version="5.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd">
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controllers.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>controllers.ProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>controllers.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderController</servlet-name>
        <servlet-class>controllers.OrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetailController</servlet-name>
        <servlet-class>controllers.ProductDetailController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>CheckoutServlet</servlet-name>
        <servlet-class>controllers.CheckoutServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <servlet-class>controllers.PlaceOrderServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>MyOrderController</servlet-name>
        <servlet-class>controllers.MyOrderController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>AIController</servlet-name>
        <servlet-class>controllers.AIController</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>CategoryController</servlet-name>
        <servlet-class>controllers.CategoryController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderController</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductDetailController</servlet-name>
        <url-pattern>/product/detail</url-pattern>
    </servlet-mapping>
    <!--    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/product/cart</url-pattern>
    </servlet-mapping>-->
    
    <servlet-mapping>
        <servlet-name>CheckoutServlet</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>PlaceOrderServlet</servlet-name>
        <url-pattern>/placeOrder</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>MyOrderController</servlet-name>
        <url-pattern>/my-orders</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AIController</servlet-name>
        <url-pattern>/ai</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>CategoryController</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>
